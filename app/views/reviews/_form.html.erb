<%= form_for([@movie, @movie.reviews.build]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>


  <p>
    <div class="btn-group" data-toggle="buttons-radio">
      <%= f.label :rating %><br>
      <%= f.radio_button :rating, "ABC", :id=>"first" %>
      <label for="first" class="btn btn-primary">1</label>

      <%= f.radio_button :rating, "PQR", :id=>"second" %>
      <label for="second" class="btn btn-primary">2</label>

      <%= f.radio_button :rating, "MNO", :id=>"third" %>
      <label for="third" class="btn btn-primary">3</label>

      <%= f.radio_button :rating, "MNO", :id=>"fourth" %>
      <label for="fourth" class="btn btn-primary">4</label>

      <%= f.radio_button :rating, "MNO", :id=>"fifth" %>
      <label for="fifth" class="btn btn-primary">5</label>

    </div>
  </p>


  <p>
    <%= f.label :recommendation %><br>
    <%= f.text_area :recommendation %>
  </p>
  <p>
    <%= f.label :spoiler? %><br>
    <%= f.check_box :spoiler?, value: true %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
