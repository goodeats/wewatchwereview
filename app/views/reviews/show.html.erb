<div><%= link_to 'Back', movie_path(@movie.id) %></div>
<div><%= link_to 'New Review', new_movie_review_path(@movie) %></div>

<% if @review.user == current_user %>
  <div><%= link_to 'Edit', edit_movie_review_path(@movie, @review) %></div>
  <%= button_to 'Delete Review', movie_review_path(@movie, @review), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>


<h1>Show this review here</h1>

<%= flash[:notice] %>
<div class = "row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center">
        <h2><%= @review.title %></h2>
      </div>
      <div class="panel-body">
        <h3><%= @review.user.name %></h3>
        <p><%= @review.body %></p>
        <p><%= @review.rating %></p>
        <p><%= @review.recommendation %></p>
        <p><%= @review.spoiler %></p>
      </div>
    </div>
  </div>
</div>
