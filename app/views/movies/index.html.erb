<%= flash[:notice] %>
<%= link_to 'New Movie', new_movie_path %>
<%= link_to 'List of All Reviews', reviews_path %>
<h1>Movies Index</h1>

<% @movies.each do |movie| %>
  <div>
    <p><%= movie.title %></p>
    <p><%= link_to image_tag(movie.poster), movie %></p>
    <p><%= movie.rotten_tomatoes_score %></p>
    <p><%= movie.genre %></p>
  </div>
<% end %>

